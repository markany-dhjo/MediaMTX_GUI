<Window x:Class="MediaMTX_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MediaMTX RTSP Streamer" Height="700" Width="900" MinHeight="600" MinWidth="800"
        Icon="icon.ico" Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- File Management and Control -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Control Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="동영상 파일 관리 및 제어" FontSize="16" FontWeight="Bold" Margin="0,0,20,0"/>
                    <Border Background="#4CAF50" CornerRadius="4" Margin="0,0,8,0">
                        <Button Name="SelectFilesButton" Content="📁 파일 선택" Click="SelectFiles_Click" 
                                Height="32" Background="Transparent" Foreground="White" FontSize="12" 
                                BorderThickness="0" Cursor="Hand" Padding="10,0"/>
                    </Border>
                    <Border Background="#FF9800" CornerRadius="4" Margin="0,0,8,0">
                        <Button Name="ClearFilesButton" Content="🗑 목록 지우기" Click="ClearFiles_Click" 
                                Height="32" Background="Transparent" Foreground="White" FontSize="12" 
                                BorderThickness="0" Cursor="Hand" Padding="10,0"/>
                    </Border>
                    <Border Background="#2196F3" CornerRadius="4" Margin="0,0,8,0">
                        <Button Name="StartAllButton" Content="▶ 전체 시작" Click="StartAll_Click" 
                                Height="32" Background="Transparent" Foreground="White" FontSize="12" 
                                BorderThickness="0" Cursor="Hand" IsEnabled="False" Padding="10,0"/>
                    </Border>
                    <Border Background="#F44336" CornerRadius="4">
                        <Button Name="StopAllButton" Content="⏹ 전체 중지" Click="StopAll_Click" 
                                Height="32" Background="Transparent" Foreground="White" FontSize="12" 
                                BorderThickness="0" Cursor="Hand" IsEnabled="False" Padding="10,0"/>
                    </Border>
                </StackPanel>
                
                <!-- Status -->
                <TextBlock Grid.Row="1" Name="StatusText" Text="대기 중" FontSize="14" Foreground="#666" Margin="0,0,0,10"/>
                
                <!-- File List with Individual Controls -->
                <ListBox Grid.Row="2" Name="FileListBox" Background="Transparent" BorderThickness="0" 
                         Height="150" ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.CanContentScroll="False"/>
            </Grid>
        </Border>
        
        <!-- Streaming Settings -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="스트리밍 설정" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,30,0">
                        <TextBlock Text="해상도:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Name="ResolutionComboBox" Width="120" Height="30">
                            <ComboBoxItem Content="원본" IsSelected="True"/>
                            <ComboBoxItem Content="1920x1080"/>
                            <ComboBoxItem Content="1280x720"/>
                            <ComboBoxItem Content="854x480"/>
                            <ComboBoxItem Content="640x360"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="FPS:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Name="FpsComboBox" Width="80" Height="30">
                            <ComboBoxItem Content="원본" IsSelected="True"/>
                            <ComboBoxItem Content="60"/>
                            <ComboBoxItem Content="30"/>
                            <ComboBoxItem Content="24"/>
                            <ComboBoxItem Content="15"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- RTSP URL Display -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="RTSP 스트리밍 주소" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox Name="RtspUrlListBox" Background="#E8F5E8" BorderThickness="0"
                         Height="80" ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.CanContentScroll="False"/>
            </StackPanel>
        </Border>
        
        <!-- Log Output -->
        <Border Grid.Row="3" Background="White" CornerRadius="8" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="로그" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <ScrollViewer Grid.Row="1" Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" MinHeight="150">
                    <TextBox Name="LogTextBox" IsReadOnly="True" TextWrapping="Wrap" 
                             Background="#1E1E1E" Foreground="#D4D4D4" FontFamily="Consolas"
                             FontSize="12" Padding="10" BorderThickness="0"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
